<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    tools:context=".TechnologyAcceptanceActivityResults">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="Αποτελέσματα Technology Acceptance Test"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="464dp"
        android:layout_below="@id/titleText">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/titleText">

            <TableLayout
                android:id="@+id/resultTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">

                <!-- Table header -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Add TextViews for each TAM item -->
                    <TextView
                        android:layout_gravity="center"
                        android:padding="3dip"
                        android:text="Στοιχείο 1"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_gravity="center"
                        android:padding="3dip"
                        android:text="Στοιχείο 2"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_gravity="center"
                        android:padding="3dip"
                        android:text="Στοιχείο 3"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_gravity="center"
                        android:padding="3dip"
                        android:text="Στοιχείο 4"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_gravity="center"
                        android:padding="3dip"
                        android:text="Στοιχείο 5"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_gravity="center"
                        android:padding="3dip"
                        android:text="Στοιχείο 6"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_gravity="center"
                        android:padding="3dip"
                        android:text="Στοιχείο 7"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_gravity="center"
                        android:padding="3dip"
                        android:text="Στοιχείο 8"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_gravity="center"
                        android:padding="3dip"
                        android:text="Στοιχείο 9"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_gravity="center"
                        android:padding="3dip"
                        android:text="Στοιχείο 10"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_gravity="center"
                        android:padding="3dip"
                        android:text="Στοιχείο 11"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_gravity="center"
                        android:padding="3dip"
                        android:text="Στοιχείο 12"
                        android:textSize="18sp" />

                    <!-- Add TextViews for PU and PEU -->
                    <TextView
                        android:layout_gravity="center"
                        android:padding="3dip"
                        android:text="PU"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_gravity="center"
                        android:padding="3dip"
                        android:text="PEU"
                        android:textSize="18sp" />
                </TableRow>

                <!-- Add more rows for results dynamically in code -->
            </TableLayout>
        </ScrollView>
    </HorizontalScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addResultButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        app:srcCompat="@drawable/baseline_add_24"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/homeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        app:srcCompat="@drawable/baseline_home_24"
        />
</RelativeLayout>
