<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/titleTextStroop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="Stroop Test "
        android:textSize="34sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextCongruent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Εισαγάγετε το χρόνο για ίδια ερεθίσματα (ms)"
        android:inputType="numberDecimal"
        android:layout_below="@id/titleTextStroop"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/editTextIncongruent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Εισαγάγετε χρόνο για ασυμβίβαστα ερεθίσματα (ms)"
        android:inputType="numberDecimal"
        android:layout_below="@id/editTextCongruent"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/buttonCalculateStroop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Υπολογισμοσ Stroop Effect"
        android:layout_below="@id/editTextIncongruent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/textViewStroopResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@id/buttonCalculateStroop"
        android:layout_marginTop="16dp"/>
</RelativeLayout>
