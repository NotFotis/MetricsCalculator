<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    tools:context=".TrialActivityResults">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="Trail Making Test (A and B)"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etPartATime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleText"
        android:hint="Χρόνος για μέρος A"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/etPartBTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Χρόνος για μέρος B"
        android:layout_below="@id/etPartATime"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/etAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ηλικία"
        android:inputType="number"
        android:layout_below="@id/etPartBTime"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnCalculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Υπολογισμός Αποτελεσμάτων"
        android:layout_below="@id/etAge"
        android:layout_marginTop="16dp"/>
</RelativeLayout>
